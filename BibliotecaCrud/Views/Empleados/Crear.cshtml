                <nav class="float-end" style="--bs-breadcrumb-divider: '';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="breadcrumb-item">Gestion de empleados</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="container p-5 border rounded">
        <div class="row col-6 mx-auto">
            <form>
                <h2 class="text-center">Crear nuevo empleado</h2>
                <div class="mb-3">
                    <label for="inputNombre" class="form-label">Nombres</label>
                    <input type="text" class="form-control" id="inputTitulo">
                </div>
                <div class="mb-3">
                    <label for="inputApellido" class="form-label">Apellidos</label>
                    <input type="text" class="form-control" id="inputApellidos">
                </div>
                <div class="mb-3">
                    <label for="inpoTipoDocumento" class="form-label">Tipo documento</label>
                    <select type="text" class="form-control" id="inputTipoDocumento">
                        <option disabled>Seleccione una opcion</option>
                        <option value="cedula">CÃ©dula</option>
                        <option value="Tarjeta identidad">Tarjeta identidad</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="inputGenero" class="form-label">Genero</label>
                    <select type="text" class="form-control" id="inputGenero">
                        <option disabled>Seleccione una opcion</option>
                        <option value="hombre">Hombre</option>
                        <option value="mujer">Mujer</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="inputEditorial" class="form-label">Numero documento</label>
                    <input type="text" class="form-control" id="inputNumeroDocumento">
                </div>
                <div class="mb-3">
                    <label for="inputGenero" class="form-label">Numero de contacto</label>
                    <input type="tel" class="form-control" id="inputNumero">
                </div>
                <div class="mb-3">
                    <label for="inputImgUrl" class="form-label">Correo electronico</label>
                    <input type="email" class="form-control" id="inputEmail">
                </div>
                <a class="btn btn-primary mt-3" asp-area="" asp-controller="Empleados" asp-action="Index">Crear nuevo
                    empleado</a>
            </form>
        </div>
    </div>

</div>