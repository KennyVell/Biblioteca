@{
    ViewData["Title"] = "Editar libro";
}

<div class="mt-5">
    <div class="row">
        <div class="col">            
            <nav class="float-end" style="--bs-breadcrumb-divider: '';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Libros" asp-action="Index">volver</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="breadcrumb-item">Gestion de libros</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row col-6 mx-auto">
        <form>
        <div class="mb-3">
            <label for="inputTitulo" class="form-label">Título</label>
            <input value="El Hobbit" type="text" class="form-control" id="inputTitulo">
        </div>
        <div class="mb-3">
            <label for="inputResumen" class="form-label">Resumen</label>
            <input value="El hobbit Bilbo Bolsón vive una vida tranquila hasta que el mago Gandalf aparece y le encomienda una misión: unirse a un grupo de enanos para recuperar un tesoro que les pertenece. El tesoro está guardado por un dragón en el reino de Erebor, que antes pertenecía a los enanos. Durante el viaje, Bilbo y los enanos tendrán que enfrentarse a orcos y otros peligros, como Gollum y un anillo de oro que tiene un poder extraordinario." type="text" class="form-control" id="inputResumen">
        </div>
        <div class="mb-3">
            <label for="inputAutor" class="form-label">Autor</label>
            <input value="J.R.R. Tolkien" type="text" class="form-control" id="inputAutor">
        </div>
        <div class="mb-3">
            <label for="inputEditorial" class="form-label">Editorial</label>
            <input value="Minotauro" type="text" class="form-control" id="inputEditorial">
        </div>
        <div class="mb-3">
            <label for="inputGenero" class="form-label">Genero</label>
            <input value="Fantasía" type="text" class="form-control" id="inputGenero">
        </div>
        <div class="mb-3">
            <label for="inputImgUrl" class="form-label">Url o ruta de la imagen</label>
            <input value="https://images.cdn1.buscalibre.com/fit-in/360x360/47/5a/475a983f7abdaf0f9b03c4ddbb26d790.jpg" type="url" class="form-control" id="inputImgUrl">
        </div>
        <div class="mb-3">
            <label for="inputYear" class="form-label">Año de publicación</label>
            <input value="2002" type="date" class="form-control" id="inputYear">
        </div>
        <a class="btn btn-primary mt-3" asp-area="" asp-controller="Libros" asp-action="Actualizar">Editar libro</a>
    </form>
    </div>    
</div>