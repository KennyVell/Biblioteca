@{
    ViewData["Title"] = "Inicio";
}

<div class="mt-5 text-center">
    <div class="container">
        <div class="row">
            <div class="col">
                <nav class="float-end" style="--bs-breadcrumb-divider: '';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Bienvenido a libraventura!</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="container p-5 border rounded">
        <div class="row">
            <div class="col">
                <h1 class="display-4">Libraventura</h1>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col">
                <a class="btn btn-dark" asp-area="" asp-controller="Prestamos" asp-action="Index">Gestionar
                    prestamos</a>
                <a class="btn btn-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Gestionar
                    usuarios</a>
                <a class="btn btn-dark" asp-area="" asp-controller="Libros" asp-action="Index">Gestionar libros</a>
                <a class="btn btn-dark" asp-area="" asp-controller="Ejemplares" asp-action="Index">Gestionar
                    ejemplares</a>
                <a class="btn btn-dark" asp-area="" asp-controller="Empleados" asp-action="Index">Gestionar
                    Empleados</a>
            </div>
        </div>

        <div class="row">
            <div class="col-9 mx-auto">
                <div id="carouselExampleAutoplaying" class="mt-5 carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://cdn.pixabay.com/photo/2019/09/30/14/29/books-4515917_960_720.jpg"
                                class="d-block w-100" alt="Carrusel">
                        </div>
                        <div class="carousel-item">
                            <img src="https://cdn.pixabay.com/photo/2014/09/05/18/32/old-books-436498_960_720.jpg"
                                class="d-block w-100" alt="Carrusel">
                        </div>
                        <div class="carousel-item">
                            <img src="https://cdn.pixabay.com/photo/2017/08/07/19/07/books-2606859_960_720.jpg"
                                class="d-block w-100" alt="Carrusel">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>
